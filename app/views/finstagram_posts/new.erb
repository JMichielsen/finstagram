<h2>New Post</h2>

<%= erb(:'shared/errors', {locals: { errors: @finstagram_post.errors.full_messages }}) %>

<form method="POST" action="/finstagram_posts">
    <div class="form-group">
        <label for="photo_url">Photo URL</label>
        <input type="text" id="photo_url" name="photo_url">
    </div>
    <div class="form-group">
        <button class="button" type="submit">Post!</button>
    </div>
</form>

<img id="preview" style="display: none; max-width: 600px;" src="" alt="">

<script 
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" 
    crossorigin="anonymous">
</script>

<script>
    console.log(document)
    $(document).ready(function(){
        
        console.log("Document Ready");
        $("#photo_url").on("blur", function(event) {
            console.log("Blur Fired!");
            var photoUrl = $(this).val();
            console.log(photoUrl);
            var preview = $("#preview");
            console.log(preview);

            if(photoUrl) {
                preview.attr("src", photoUrl);
                preview.show();
                console.log(preview);
            } else {
                preview.hide();
            }
        });

    });
    </script>